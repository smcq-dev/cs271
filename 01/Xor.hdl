/**
 * Exclusive-or gate:
 * if ((a and Not(b)) or (Not(a) and b)) out = 1, else out = 0
 */
CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
    Nand(a= a, b= b, out= nOut1);
    Nand(a= a, b= nOut1, out= nOut2);
    Nand(a= b, b= nOut1, out= nOut3);
    Nand(a= nOut2, b= nOut3, out= out);
}